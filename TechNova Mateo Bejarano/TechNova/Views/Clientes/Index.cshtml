@model IEnumerable<TechNova.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Clientes</h1>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i> Nuevo Cliente</a>
</div>

<div class="card">
    <div class="card-body">
        <!-- Buscador -->
        <form asp-action="Index" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Buscar por nombre o correo..." />
                <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </form>

        <!-- Tabla de clientes -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreCompleto</td>
                                <td>@item.Correo</td>
                                <td>@item.Direccion</td>
                                <td>@item.Telefono</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-1" asp-action="Details" asp-route-id="@item.ClienteId"><i class="bi bi-eye">Detalles</i></a>
                                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Edit" asp-route-id="@item.ClienteId"><i class="bi bi-pencil">Editar</i></a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.ClienteId"><i class="bi bi-trash"></i>Eliminar</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-muted text-center">No se encontraron clientes.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

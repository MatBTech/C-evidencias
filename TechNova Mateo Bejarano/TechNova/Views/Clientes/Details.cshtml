@model TechNova.Models.Cliente

@{
    ViewData["Title"] = "Detalle Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <h3 class="card-title mb-0">@Model.NombreCompleto</h3>
            <div>
                <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Edit" asp-route-id="@Model.ClienteId"><i class="bi bi-pencil"></i> Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@Model.ClienteId"><i class="bi bi-trash"></i> Eliminar</a>
            </div>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>

            <dt class="col-sm-3 text-muted">Dirección</dt>
            <dd class="col-sm-9">@Model.Direccion</dd>

            <dt class="col-sm-3 text-muted">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>

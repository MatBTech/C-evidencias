@model TechNova.Models.Producto

@{
    ViewData["Title"] = "Detalle Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <h3 class="card-title mb-0">@Model.Nombre</h3>
            <div>
                <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Edit" asp-route-id="@Model.ProductoId"><i class="bi bi-pencil"></i> Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@Model.ProductoId"><i class="bi bi-trash"></i> Eliminar</a>
            </div>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3 text-muted">Precio</dt>
            <dd class="col-sm-9">@Model.PrecioUnitario.ToString("C")</dd>

            <dt class="col-sm-3 text-muted">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

            <dt class="col-sm-3 text-muted">Código</dt>
            <dd class="col-sm-9">@Model.Codigo</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechNova</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- Professional site stylesheet -->
    <link rel="stylesheet" href="~/css/site-professional.css" />

    <meta name="theme-color" content="#0d6efd">
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.svg" alt="TechNova" height="36" class="me-2" />
                <span class="brand-text">TechNova</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productoes" asp-action="Index">Productos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Ventas" asp-action="Index">Ventas</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="VentaDetalles" asp-action="Index">Detalles</a>
                    </li>

                </ul>

                <partial name="_LoginPartial" />

            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="py-4">
        <div class="container">
            <div class="content-container">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="site-footer mt-5">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div>
                <small>&copy; @DateTime.Now.Year TechNova</small>
            </div>
            <div>
                <a asp-controller="Home" asp-action="Privacy" class="text-muted me-3">Privacidad</a>
                <a href="#" class="text-muted">Soporte</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
